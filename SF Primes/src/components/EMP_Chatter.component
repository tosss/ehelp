                        +'<a href="#" id="UnlikePostId" name="UnlikePostId" onclick="unlikeAPost(this,\''+postId+'\');return false;" style="display:none">Unlike </a><span id="thumbsUp">'
                        +'<i class="fa fa-thumbs-o-up"></i>&nbsp;<span id="likeCount">0</span></span><span>'
