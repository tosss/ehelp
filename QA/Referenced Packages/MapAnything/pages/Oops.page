<apex:page controller="sma.OopsCon" sidebar="false">

	<!-- Global Styles -->
	<style type='text/css'>
	
		/* SF Fixes */
    	body {
    		margin: 0 !important;
    		padding: 0 10px 10px 10px !important;
    		-moz-box-sizing: border-box;
    		box-sizing: border-box;
    	}
    	.outerNoSidebar, .noSidebarCell {
    		padding: 0 !important;
    		min-height: 700px !important;
    		width: 100% !important;
    		height: auto;
    	}
    	
    	/* Globals */
		.noSidebarCell{
			background:url("{!URLFOR($Resource.MapAnything, 'images/oops/bg.jpg')}");
			background-size:100% 100%;
		}
		.center{
			max-width:386px;
			height:auto;
			margin:0 auto;
			padding:0 20px;
		}
		.center img{
			width:100%;max-width:386px;
		}
		.center a{
			font-size:16px;
			color:#000;
			font-family:helvetica,arial,sans-serif;
			font-weight:100;
			text-align:center;
			text-decoration:underline;
			display:block;
			margin:10px auto;
		}
		.center .msg {
			font-size: 10px;
			text-align: center;
		}

	</style>

	<!-- Mobile Only -->
	<apex:outputPanel rendered="{! state == 'MobileOnly' }">
	
		<div class='center'>
			<img src="{!URLFOR($Resource.MapAnything, 'images/oops/mobileonly.png')}" alt="This page is only available on mobile browsers." />
			<apex:outputLink value="{!$Page.sma__MapAnything}">Return to MapAnything<sup>TM</sup></apex:outputLink>
			<img src="{!URLFOR($Resource.MapAnything, 'images/oops/shadow.png')}" alt="" />
		</div>
	
	</apex:outputPanel>
	
	<!-- Unsupported Browser -->
	<apex:outputPanel rendered="{! state == 'UnsupportedBrowser' }">

		<div class='center'>
			<img src="{!URLFOR($Resource.MapAnything, 'images/oops/browser.png')}" alt="This browser is not supported." />
			<div class='msg'>Please use Google Chrome, Mozilla Firefox, or Internet Explorer 9 and above</div>
			<img src="{!URLFOR($Resource.MapAnything, 'images/oops/shadow.png')}" alt="" />
		</div>
	
	</apex:outputPanel>
	
	<!-- Unknown -->
	<apex:outputPanel rendered="{! state == 'Unknown' }">
	
		<div class='center'>
			<img src="{!URLFOR($Resource.MapAnything, 'images/oops/unknown.png')}" alt="Oops, something went wrong." />
			<apex:outputLink value="{!$Page.sma__MapAnything}">Return to MapAnything<sup>TM</sup></apex:outputLink>
			<img src="{!URLFOR($Resource.MapAnything, 'images/oops/shadow.png')}" alt="" />
		</div>
	
	</apex:outputPanel>

</apex:page>