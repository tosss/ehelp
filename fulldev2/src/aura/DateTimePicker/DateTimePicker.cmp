    <aura:attribute type="String" name="selectedTime" default="" />
    <aura:attribute type="String" name="selectedTimeHrs" default="" />
    <aura:attribute type="String" name="selectedTimeMin" default="" />
    <aura:attribute type="String" name="value" default="" />
    <aura:attribute type="String" name="label" default="Calender" />
    <aura:attribute type="Boolean" name="datetime" default="true" />
    <aura:handler name="init" value="{!this}" action="{!c.initialize}" />
    <aura:handler event="c:initializeValues"  action="{!c.doInit}"/>
    
    <aura:attribute type="String" name="selectedCompleteDate" />
