        <div class="slds-form-element"  >
            <label class="slds-form-element__label" for="searchString" style="{!v.label=='' ? 'display:none;': 'display:block'}">{!v.label}</label>
            <div id="dateInput">
            <div style="{!v.datetime ? 'width:50%;display:inline-block;':''}">
                <div class="slds-form-element__control slds-input-has-icon slds-input-has-icon--right" onclick="{!c.toggleCalender}">
                    <img  class="slds-input__icon slds-icon-text-default" src="/resource/slds100/assets/icons/utility/event_60.png"  />
                    <input aura:id="selectedDate" id="selectedDate"  class="slds-input"  value="{!v.selectedDate}"  onblur="{!c.setValue}" readonly="true" />
                </div>
            </div>
            <div class="slds-datepicker slds-dropdown slds-dropdown--center" id="divCalender" aria-hidden="false" style="display:none;">
                <div class="slds-datepicker__filter slds-grid">
                    <div class="slds-datepicker__filter--month slds-grid slds-grid--align-spread slds-grow">
                        <div class="slds-align-middle dontHide">
                            <button class="slds-button slds-button--icon-container" onclick ="{!c.prevMonth}">
                                <img src="/resource/slds100/assets/icons/utility/left_60.png" class="slds-icon slds-button__icon slds-button__icon--small" />
                                <span class="slds-assistive-text">Previous Month</span>
                            </button>
                        </div>
                        <h2 id="displayMonth" class="slds-align-middle" aria-live="assertive" aria-atomic="true">{!v.displayMonth}</h2>
                        <div class="slds-align-middle dontHide">
                            <button class="slds-button slds-button--icon-container" onclick="{!c.nextMonth}">
                                <img src="/resource/slds100/assets/icons/utility/right_60.png" class="slds-icon slds-button__icon slds-button__icon--small" />
                                <span class="slds-assistive-text">Next Month</span>
                            </button>
                        </div>
                    </div>
                    <div class="slds-datepicker__filter--month slds-grid slds-grid--align-spread slds-grow">
                        <div class="slds-align-middle dontHide">
                            <button class="slds-button slds-button--icon-container" onclick ="{!c.prevYear}">
                                <img src="/resource/slds100/assets/icons/utility/left_60.png" class="slds-icon slds-button__icon slds-button__icon--small" />
                                <span class="slds-assistive-text">Previous Year</span>
                            </button>
                        </div>
                        <h2 id="displayYear" class="slds-align-middle" aria-live="assertive" aria-atomic="true">{!v.displayYear}</h2>
                        <div class="slds-align-middle dontHide">
                            <button class="slds-button slds-button--icon-container" onclick="{!c.nextYear}">
