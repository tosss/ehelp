<aura:component >
    <aura:attribute name="id" type="String" default="" />
    <aura:attribute name="name" type="String" default="" />
	 <a   class="slds-pill" style="margin:0.5%;">
    <span class="slds-pill__label">{!v.name}</span>
    <button class="slds-button slds-button--icon-bare slds-pill__remove">
     <img id="{!v.id}" name="{!v.name}" src="/resource/slds100/assets/icons/utility/close_60.png" class="slds-button__icon slds-button__icon--small" />
      <span class="slds-assistive-text">Remove</span>
    </button>
  </a>
</aura:component>