<apex:page controller="All_IdeaList" standardStylesheets="false" showHeader="false" >
    <apex:includeScript value="{!URLFOR($Resource.jQuery, 'js/jquery-1.10.2.min.js')}" />
    <script>
    jQuery(document).ready(function(){
        jQuery('.title').mouseenter(function(){
            jQuery(this).css('background-color','#E4F7EB');
        })
        .mouseleave(function(){
            jQuery(this).css('background-color','#75E69D');
        });
    });
    </script>
    <style>
        .title
        {
        font-family: sans-serif;
        font-size: 1.1em;
        border: solid 0.1em #B1AFAF;
        cursor:pointer;
        border-radius: 5px;
        background-color: #75E69D;
        padding:0.5%;
        }
    </style>
    <apex:form >
        <table width="100%">
            <apex:repeat value="{!allIdeas}" var="ideaObj" >
                <tr>
                    <td class="title">
                        <span><img src="{!ideaObj.creatorsmallphotourl}" width="30px" height="auto"/><b><a style="text-decoration:none;color:black;" href="/{!ideaObj.Id}" target="_blank">{!ideaObj.title}</a></b></span>
                        <div style="float:right;">
                            <span style="font-size:0.8em;font-style:italic;text-align:right;"><br/> By <b>{!ideaObj.CreatorName}</b></span>
                            <span style="font-size:0.6em;font-style:normal;text-align:right;">Last Modified&nbsp;&nbsp;<apex:inputField value="{!ideaObj.CreatedDate}" /></span>                  
                        </div>
                    </td>
                </tr>
            </apex:repeat>
        </table>
    </apex:form>
</apex:page>