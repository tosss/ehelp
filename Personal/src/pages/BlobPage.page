<apex:page controller="blobcontroller" showHeader="false"> 
    
<apex:includeScript value="{!URLFOR($Resource.jQuery, 'js/jquery-1.7.2.min.js')}" />

    <apex:includeScript value="{!URLFOR($Resource.jQuery, 'js/jquery-ui-1.8.20.custom.min.js')}" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"/>
<style>
    .overlay {
    position:absolute;
    top:0; bottom:0; left:0; right:0;
    display:block;
    z-index:2;
    background:white;
    filter: alpha(opacity=30);
    -moz-opacity: 0.3;
    -khtml-opacity: 0.3;
    opacity: 0.3;
}
    </style>
    <script id="Id">
    jQuery(document).ready(function(){
        jQuery('#docViewerOverlay').hide();
        jQuery('.overlay').hide();
        jQuery('.hello').mouseenter(function(){
            jQuery('.overlay').css('height',jQuery(this).height());
            jQuery('.overlay').css('width',jQuery(this).width());
            jQuery('.overlay').show();
        });
        jQuery('.overlay').mouseleave(function(){
            jQuery('.overlay').hide();
        });
        jQuery('.overlay').click(function(){
            jQuery('#docViewerOverlay').show();
        });
        jQuery('#docViewerOverlayX').click(function(){jQuery(this).parent().parent().parent().hide();});
    });
        </script>
    <div>
        <div class="hello" style="float:left;"><img src="data:image/png;base64,{!b}" width="120px"/>
    </div>
        <div class="overlay" width="120px"> 
            <div>
            <i class="fa fa-search fa-2x" style="margin-top:50%;margin-left:37%;" ></i>
            </div>
        </div>
    </div>
    <div id="docViewerOverlay" role="dialog" aria-live="assertive" aria-describedby="docViewerOverlayTitle" class="overlayDialog docViewerOverlay" style=" display: block;max-width:65%; visibility: visible; left: 435px; top: 29.5px;">
        <div class="topRight">
            <a id="docViewerOverlayFocusPoint" href="javascript:void(0)" style="width:2px;position:absolute;border:0;margin:0;padding:0;background:none;outline:none;z-index:-1;cursor:none;" title="Start of Dialog" onfocus="document.getElementById(&quot;docViewerOverlayX&quot;).focus()">Start of Dialog</a>
            <div class="topLeft">
                <a id="docViewerOverlayX" title="Close" tabindex="0" onmouseover="this.className = 'dialogCloseOn'" onmouseout="this.className = 'dialogClose'"  href="javascript:void(0)" class="dialogClose">Close</a>
                <h2 id="docViewerOverlayTitle"><div>{!f.title}</div></h2>
            </div>
        </div>
        <div class="middle">
            <div class="innerContent" id="docViewerOverlayContent" style="overflow-y: auto; position: relative;">
                <div class="docViewerContainerParent" id="docViewerContainerParent" >
                    <div class="docViewerContainer" id="docViewerContainer">
                        <div class="hi"><img src="data:image/png;base64,{!b}" width="100%" height="95%" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="data:image/png;base64,{!b2}" download="ChatterImage" >Download</a>
</apex:page>